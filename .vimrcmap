let mapleader = ","
set timeout timeoutlen=3000 ttimeoutlen=100

"Plugings
nnoremap <space> :
nnoremap <C-b> :NERDTreeToggle<CR>
nnoremap <C-f> :NERDTreeFind<CR>
map <leader>p :Prettier<CR>

"Git
map <leader>gf :GitGutterFold<CR>
map <leader>gh :GitGutterLineHighlightsToggle<CR>
map <leader>gd :GitGutterDiffOrig<CR>

"Files
map <C-p> :Files<CR>

"Movement
let g:BASH_Ctrl_l = 'off'
nnoremap <C-j> 10j
nnoremap <C-k> 10k
vnoremap <C-j> 10j
vnoremap <C-k> 10k
imap <C-H> <esc>bi
imap <C-L> <esc>wi
noremap <C-H> b
nnoremap <C-L> w

"Misc
inoremap jj <esc>
map <C-s> <esc>:w<CR>
nnoremap <C-r> :source $MYVIMRC<CR>

"Copy, Cut, Paste and Selection
nmap <C-c> yy
vmap <C-c> y
imap <C-c> <esc>yyli
noremap <C-v> <esc>P
noremap <C-a> <esc>ggVG<CR>

"Comentary
nmap <C-o> gcc
imap <C-o> <esc>gcc
vmap <C-o> gc
map <C-o> gcap
